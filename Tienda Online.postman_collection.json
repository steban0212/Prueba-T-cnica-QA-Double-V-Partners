				{
					"name": "5. Eliminar producto",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"let productsToDelete = JSON.parse(pm.environment.get(\"productsToDelete\"));\r",
									"\r",
									"// Verifica si hay productos para eliminar\r",
									"if (productsToDelete.length > 0) {\r",
									"    // Tomamos el primer producto para eliminar\r",
									"    let productId = productsToDelete.shift();\r",
									"    \r",
									"    // Guardar el ID del producto actual para eliminar en la variable de entorno\r",
									"    pm.environment.set(\"currentProductId\", productId);\r",
									"    \r",
									"    // Actualizar la lista de productos por eliminar\r",
									"    pm.environment.set(\"productsToDelete\", JSON.stringify(productsToDelete));\r",
									"} else {\r",
									"    // Si ya no hay más productos por eliminar, limpiar las variables de entorno\r",
									"    pm.environment.unset(\"currentProductId\");\r",
									"    postman.setNextRequest(null);  // Detener la ejecución de la siguiente request\r",
									"}"
								],
								"type": "text/javascript",
								"packages": {}
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"//Test\r",
									"\r",
									"//Verificar status petición 200 OK\r",
									"pm.test(\"Status code is 200\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"//Verificar que el precio del producto eliminado si sea <100\r",
									"pm.test(\"Producto eliminado con precio < 100 correctamente\", function () {\r",
									"    var jsonData = pm.response.json();\r",
									"    var price = jsonData.price;\r",
									"    pm.expect(price).to.be.below(100);\r",
									"});\r",
									"\r",
									"\r",
									"//Continuación post-response para eliminar productos\r",
									"\r",
									"let productsToDelete = JSON.parse(pm.environment.get(\"productsToDelete\") || \"[]\");\r",
									"\r",
									"if (productsToDelete.length > 0) {\r",
									"    // Continuar con la eliminación del siguiente producto\r",
									"    postman.setNextRequest(\"Delete Product\");\r",
									"} else {\r",
									"    // Si ya no quedan productos por eliminar, detener la ejecución\r",
									"    postman.setNextRequest(null);\r",
